# Environment Configuration for EDS
# Copy this file to .env and modify the values as needed

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database Connection
DB_HOST=localhost
DB_PORT=5432
DB_USER=eds_user
DB_PASSWORD=eds_password
DB_NAME=eds_database

# Alternative: Complete database URL (overrides individual settings above)
# DATABASE_URL=postgresql://eds_user:eds_password@localhost:5432/eds_database

# =============================================================================
# PROCESSING CONFIGURATION  
# =============================================================================

# EDS Algorithm Parameters
CONFIDENCE_THRESHOLD=0.7
MIN_CLEARING_AREA_HA=1.0
MAX_CLOUD_COVERAGE=20.0

# Resource Limits
MAX_CONCURRENT_JOBS=4
TIMEOUT_MINUTES=60

# Output Settings
OUTPUT_DIRECTORY=data/processing_results
SAVE_INTERMEDIATE_FILES=false

# Scheduler Settings
ENABLE_SCHEDULER=true
DAILY_PROCESSING_TIME=02:00
URGENT_PROCESSING_HOURS=48

# Data Source Settings
LANDSAT_DATA_SOURCE=aws
DATA_CACHE_DIRECTORY=data/cache

# =============================================================================
# DASHBOARD CONFIGURATION
# =============================================================================

# Web Dashboard Settings
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8050
DASHBOARD_DEBUG=false

# Update Intervals (seconds)
DATA_REFRESH_INTERVAL=30
CHART_REFRESH_INTERVAL=60

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_DIRECTORY=logs
MAX_LOG_SIZE_MB=100
BACKUP_COUNT=5
CONSOLE_LOGGING=true

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development
DEBUG=true

# Security
SECRET_KEY=change-this-in-production-to-a-long-random-string

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# AWS Configuration (if using AWS data sources)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_DEFAULT_REGION=ap-southeast-2

# Email Notifications (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@domain.com
# SMTP_PASSWORD=your-email-password
# NOTIFICATION_RECIPIENTS=admin@domain.com,alerts@domain.com